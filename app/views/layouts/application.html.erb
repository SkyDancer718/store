<!DOCTYPE html>
<html>
<head>
  <title>Магазин :D</title>
  <%= stylesheet_link_tag "application", media: "all",
  "data-turbolinks-track" => true %>
  <%= javascript_include_tag "application", 
  "data-turbolinks-track" => true %>
  <%= csrf_meta_tag %>
</head>

<body class="<%= controller.controller_name %>">
  <div id="banner">
  <%= image_tag("logo.png") %>
  <%= @page_title || "МАГАЗИН" %>
  </div>
  <div id="columns">

  <div id="side">

  <% if @cart %>
    <%= hidden_div_if(@cart.line_items.empty?, id: 'cart') do %>
      <%= render @cart %>
    <% end %>
  <% end %>
    
  <ul>
  	<li><a href="http://www....">Главная</a></li>
  	<li><a href="http://www..../faq">Оплата</a></li>
  	<li><a href="http://www..../news">Доставка</a></li>
  	<li><a href="http://www..../contact">Контакты</a></li>
  </ul>
  </div>

  <div id="main">
  	<%= yield %>
  </div>
  
  </div>
</body>
</html>